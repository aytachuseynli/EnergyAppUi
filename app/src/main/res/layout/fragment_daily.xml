<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/monthlyUseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_use"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/light_gray"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/averageDailyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textSize="32sp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="5.5" />

            <TextView
                android:id="@+id/unitDailyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="kW/h"
                android:fontFamily="@font/sfprodisplaybold"
                android:textSize="18sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dailyUseImage"
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/daily_use_image" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/averageMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="32sp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="5.7" />

            <TextView
                android:id="@+id/unitMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="kW/h"
                android:fontFamily="@font/sfprodisplaybold"
                android:textSize="18sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/NextDayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/predicted_use"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/light_gray"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/nextDayImg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/next_day_image" />



    </LinearLayout>

</ScrollView>

